<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="20dp"
    android:paddingLeft="20dp"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@drawable/main_background_white">

    <TextView
        android:id="@+id/item_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:text="NEW"
        android:textSize="10dp"
        android:textColor="@android:color/holo_red_dark"
        android:fontFamily="@font/kopubdotumlight" />

    <TextView
        android:id="@+id/item_contents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/item_new"
        android:layout_toLeftOf="@id/item_img"
        android:layout_centerVertical="true"
        android:text="Status"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="@font/kopubdotumlight"/>

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:drawable/ic_media_play"/>


</RelativeLayout>